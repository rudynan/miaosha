      id,user_id,order_id,goods_id
    </sql>

    <select id="getMiaoshaOrderByUseridGoodsId" resultType="com.rudy.miaosha.domain.MiaoshaOrder" parameterType="long">
        SELECT * from miaosha_order where user_id = #{userid} and goods_id = #{goodsid}
    </select>

    <insert id="insertOrder" parameterType="com.rudy.miaosha.domain.OrderInfo"  useGeneratedKeys="true"  keyProperty="id" >
       insert into order_info (user_id,goods_id,delivery_addr_id,goods_name,goods_count,goods_price,order_channel,status,create_date,pay_date)
        VALUES (#{userId},#{goodsId},#{deliveryAddId},#{goodsName},#{goodsCount},#{goodsPrice},#{orderChannel},#{status},#{createDate},#{payDate})
    </insert>

    <insert id="insertMiaoshaOrder" parameterType="com.rudy.miaosha.domain.MiaoshaOrder">
        INSERT into miaosha_order (user_id,order_id,goods_id) VALUES (#{userId},#{orderId},#{goodsId})
    </insert>

