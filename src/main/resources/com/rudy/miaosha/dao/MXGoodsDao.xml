    <sql id="goodsList">
     g.id,g.goods_name,g.goods_titile,g.goods_img,g.goods_detail,g.goods_price,g.goods_stock,mg.miaosha_price,mg.stock_count,mg.start_date,mg.end_date
    </sql>

    <select id="getGoodsVoList" resultType="com.rudy.miaosha.vo.GoodsVo">
        SELECT
        <include refid="goodsList"/>
        FROM `goods` AS g
        JOIN miaosha_goods AS mg
        on g.id = mg.goods_id
    </select>

    <select id="getGoodsVoById" parameterType="long" resultType="com.rudy.miaosha.vo.GoodsVo">
        SELECT <include refid="goodsList"/>
         FROM `goods` AS g
         JOIN miaosha_goods AS mg
        on g.id = mg.goods_id where g.id = #{id}
    </select>

    <update id="reduceStockById" parameterType="long">
        update miaosha_goods set stock_count = (stock_count - 1) where goods_id = #{id}
    </update>
